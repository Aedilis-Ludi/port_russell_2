<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Catway <%= catway.catwayNumber %></title>
</head>
<body>
  <%- include('includes/header') %>

  <main style="max-width:800px; margin:30px auto; font-family:Arial, sans-serif;">
    <h1>Catway <%= catway.catwayNumber %></h1>
    <div>Type : <%= catway.type %></div>
    <div>État : <%= catway.catwayState %></div>

    <h2>Réservations</h2>
    <% if (reservations.length === 0) { %>
      <p>Aucune réservation</p>
    <% } %>
    <ul>
      <% reservations.forEach(r => { %>
        <li>
          <strong><%= r.clientName %></strong> - <%= r.boatName %> :
          du <%= new Date(r.startDate).toLocaleDateString() %> au <%= new Date(r.endDate).toLocaleDateString() %>
        </li>
      <% }) %>
    </ul>
  </main>

  <%- include('includes/footer') %>
</body>
</html>
